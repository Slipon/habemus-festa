<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".users.HomeUserLogin"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">

            <TextView
                android:id="@+id/user_points_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/link"/>

            <ImageView
                android:id="@+id/imgBtn_settings"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@color/transparent"
                app:srcCompat="@drawable/ic_currency"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/mainLogo"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_gravity="center"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="25sp"
            app:srcCompat="@drawable/main_logo_mini"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/user_menu_bg_bottom">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3">

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/showEvents"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_show_events" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_events"
                            android:textColor="@color/blue"
                            android:gravity="center"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/scanBtn"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_link_users" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_scan"
                            android:textColor="@color/pink"
                            android:gravity="center"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/showQRCode"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_show_qrcode" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_showQR"
                            android:textColor="@color/pink"
                            android:gravity="center"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/showProfileBtn"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_user_profile" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_profile"
                            android:textColor="@color/link"
                            android:gravity="center"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/showSettings"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_settings_menu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_settings"
                            android:textColor="@color/link"
                            android:gravity="center"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/signOut"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_sign_out" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_logout"
                            android:textColor="@color/blue"
                            android:gravity="center"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>