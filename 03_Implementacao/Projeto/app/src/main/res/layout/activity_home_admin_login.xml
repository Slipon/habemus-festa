<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".users.HomeAdminLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/mainLogo"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_gravity="center"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="25sp"
            app:srcCompat="@drawable/main_logo_mini"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/user_menu_bg_bottom">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="5">

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/chargePoints"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_take_points" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_take_points"
                            android:textColor="@color/pink"
                            android:gravity="center"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/createEvent"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_new_event" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_new_event"
                            android:textColor="@color/blue"
                            android:gravity="center"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/showTransactions"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_show_transactions" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_transactions"
                            android:textColor="@color/link"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/createProduct"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_create_product" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_new_product"
                            android:textColor="@color/pink"
                            android:gravity="center"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/showRemoveEvents"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_remove_event" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_remove_event"
                            android:gravity="center"
                            android:textColor="@color/blue"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/showRemoveProducts"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_remove_product" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_remove_product"
                            android:gravity="center"
                            android:textColor="@color/pink"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/addColaborator"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_new_colaborator" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_new_colaborator"
                            android:textColor="@color/link"
                            android:gravity="center"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/showSettings"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_settings_menu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_settings"
                            android:textColor="@color/link"
                            android:gravity="center"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_row="4"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardElevation="0sp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/signOutAdmin"
                        android:layout_width="125sp"
                        android:layout_height="125sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/user_menu_bg_cards"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_sign_out" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/menu_button_text_logout"
                            android:textColor="@color/blue"
                            android:gravity="center"
                            android:textSize="16sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>
        </ScrollView>
    </LinearLayout>
